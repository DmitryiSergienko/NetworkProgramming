<Window
    x:Class="DZ_1_2ClientView.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DZ_1_2ClientView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    Background="#ffFFEFD5"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <Button Command="{Binding StartOffServerCommand}" Content="Сервер вкл." />
            <Button Command="{Binding AddRecipe}" Content="Добавить" />
            <Button Command="{Binding EditRecipe}" Content="Редактировать" />
            <Button Command="{Binding DeleteRecipe}" Content="Удалить" />
            <ListBox x:Name="RecipeList" Height="300" />
        </StackPanel>
        <Border
            Grid.Column="1"
            BorderBrush="Black"
            BorderThickness="1">
            <TextBlock x:Name="RecipeDescription" />
        </Border>
        <Image x:Name="RecipeImage" Grid.Column="2" />
    </Grid>
</Window>